# PWR Finanças - Root Environment Variables
# Copie este arquivo para .env e ajuste os valores conforme necessário

# =============================================================================
# API (Backend) Variables
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pwrfinancas?schema=public"

# JWT Authentication
JWT_SECRET="change-this-to-a-secure-random-string-in-production"
JWT_EXPIRES_IN="7d"

# Redis (para filas/cache)
REDIS_HOST="localhost"
REDIS_PORT=6379

# MinIO (armazenamento de arquivos/anexos)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="pwr-financas"
MINIO_USE_SSL="false"

# API Server
PORT=4000
NODE_ENV="development"

# CORS - URL do frontend
FRONTEND_URL="http://localhost:3000"

# Email (for future use)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# =============================================================================
# WEB (Frontend) Variables
# =============================================================================

# API Backend URL (deve ser acessível do navegador)
NEXT_PUBLIC_API_URL="http://localhost:4000"
